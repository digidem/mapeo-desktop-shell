{
  "name": "mapeo-desktop-shell",
  "version": "0.0.1",
  "description": "A shell app for testing an prototyping new features for Mapeo Desktop",
  "main": "./out/main/index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "preview": "electron-vite preview",
    "start": "npm run build:translations && electron-vite dev --watch",
    "dev": "electron-vite dev",
    "build": "npm run build:translations && npm run typecheck && electron-vite build",
    "extract-messages": "formatjs extract --format crowdin 'src/{renderer,main}/**/*.{ts,tsx,js,jsx}' --ignore='**/*.d.ts' --out-file messages/en.json",
    "build:translations": "node \"./scripts/compile.js\" ",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config",
    "prepare": "husky install"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.3",
    "@electron-toolkit/utils": "^1.0.2",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@mui/icons-material": "^5.11.11",
    "@mui/material": "^5.11.14",
    "dmg-license": "^1.0.11",
    "electron-updater": "^5.3.0",
    "react-intl": "^6.3.0",
    "react-router-dom": "^6.10.0",
    "zustand": "^4.3.7"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@formatjs/cli": "^6.0.4",
    "@types/node": "16.18.14",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vitejs/plugin-react": "^3.1.0",
    "electron": "^22.3.2",
    "electron-builder": "^23.6.0",
    "electron-vite": "^1.0.20",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "glob": "^9.3.0",
    "husky": "^8.0.0",
    "mkdirp": "^2.1.6",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^4.4.1",
    "typescript": "^4.9.5",
    "vite": "^4.1.4"
  }
}
